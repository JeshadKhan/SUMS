@using UniversityCourseAndResultManagementSystemApp.Models

@{
    ViewBag.Title = "Get";
    List<Course> listOfCourse = ViewBag.Courses;
}

<div class="well bs-component">
    <fieldset>
        <legend>Course List</legend>
        <span class="error">@ViewBag.ExErrorMessage</span>

        <table class="table table-responsive table-striped table-header-block">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Credit</th>
                    <th>Description</th>
                    @*<th>DepartmentId</th>
                    <th>SemesterId</th>*@
                </tr>
            </thead>
            <tbody>
                @if (listOfCourse != null)
                {
                    foreach (Course course in listOfCourse)
                    {
                        <tr>
                            <td>@course.Id</td>
                            <td>@course.Code</td>
                            <td>@course.Name</td>
                            <td>@course.Credit</td>
                            <td>@course.Description</td>
                            @*<td>@course.DepartmentId</td>
                                <td>@course.SemesterId</td>*@
                        </tr>
                    }
                }
            </tbody>
        </table>
    </fieldset>
</div>

