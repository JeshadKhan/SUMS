<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SUMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SUMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Department <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Department", "Save", "Department")</li>
                            <li>@Html.ActionLink("Department List", "Get", "Department")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Course <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Course", "Save", "Course")</li>
                            <li>@Html.ActionLink("Course List", "Get", "Course")</li>
                            <li>@Html.ActionLink("Course Teacher", "CourseTeacher", "Course")</li>
                            <li>@Html.ActionLink("View Course Statics", "ViewCourseStatics", "Course")</li>
                            <li>@Html.ActionLink("Unassign All Courses", "UnassignCourses", "Course")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Student <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Student", "Save", "Student")</li>
                            <li>@Html.ActionLink("Student List", "Get", "Student")</li>
                            <li>@Html.ActionLink("Enroll Crouse", "EnrollCourse", "Student")</li>
                            <li>@Html.ActionLink("Student Result", "StudentResult", "Student")</li>
                            <li>@Html.ActionLink("View Result", "ViewResult", "Student")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Teacher <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Teacher", "Save", "Teacher")</li>
                            <li>@Html.ActionLink("Teacher List", "Get", "Teacher")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Classroom Allocation <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Allocate Classroom", "AllocateClassroom", "AllocateClassrooms")</li>
                            <li>@Html.ActionLink("Allocate Classroom List", "Get", "AllocateClassrooms")</li>
                            <li>@Html.ActionLink("Unallocate Classroom", "UnallocateClassroom", "UnallocateClassrooms")</li>
                        </ul>
                    </li>
                    @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Classroom Un-Allocation <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Unallocate Classroom", "UnallocateClassroom", "UnallocateClassrooms")</li>
                        </ul>
                    </li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; 2016 <a class="text-bold" href="https://github.com/JeshadKhan" target="_blank">Jeshad Khan</a>. <a class="text-bold" href="http://bitm.org.bd" target="_blank">BITM</a> Final Project.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    @* Custom - CSS & JS *@
    <link href="~/Content/wickedpicker.min.css" rel="stylesheet" />
    <style type="text/css">
        ul.wickedpicker__controls li span {
            color: #000 !important;
        }
    </style>
    <script src="~/Scripts/wickedpicker.min.js"></script>
</body>
</html>
